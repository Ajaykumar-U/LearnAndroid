<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayEightActivity">

    <TextView
        android:id="@+id/tvHeaderDayEight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Day-8 Activities"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:padding="13dp"
        android:textStyle="bold"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollIndicatorUp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderDayEight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/textViewActivityEightBody"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:text="Activities Questions/Answers"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/clickFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="FragmentActivity"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginRight="1dp"
                android:padding="13dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/textViewActivityEightBody"
                android:background="@android:color/holo_red_light"
                app:layout_constraintRight_toLeftOf="@id/clickPermission"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/clickPermission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="AppPermission"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginLeft="1dp"
                android:textSize="18sp"
                android:padding="13dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/textViewActivityEightBody"
                android:background="@android:color/holo_red_light"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/clickFragment"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>