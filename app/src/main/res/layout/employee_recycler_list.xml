<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvIdF"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvNameF"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvIdF"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvJobF"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Job"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvNameF"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tvId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvNameF"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Id"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:gravity="left"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvNameF"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        android:text="Name"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:gravity="left"/>
    <TextView
        android:id="@+id/tvJob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvJobF"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:text="Job Comes Here"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:gravity="left"/>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="#000"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:background="@android:drawable/editbox_background"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/btnEdit"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>